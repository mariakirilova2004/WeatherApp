<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.ErrorPage"
             xmlns:resource="clr-namespace:WeatherApp.Resources"
             BackgroundColor="#758ABA">
    <ContentPage.Content>
        <StackLayout HeightRequest="400" Padding="40, 0, 40, 150">
            <Label Text="{x:Static resource:AppResources.Oops}"
                   FontSize="Large"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" 
                   TextColor="White"/>
            <Image Source="error.png"/>
            <Button Text="{x:Static resource:AppResources.TryAgain}" TextColor="#758ABA" BackgroundColor="White" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
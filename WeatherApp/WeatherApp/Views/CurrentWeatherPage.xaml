<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.CurrentWeatherPage">
    <Grid HorizontalOptions="FillAndExpand"
          VerticalOptions="EndAndExpand"
          RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <BoxView Grid.RowSpan="2"
                     BackgroundColor="#7585BA" 
                     HorizontalOptions="FillAndExpand" 
                     VerticalOptions="FillAndExpand"/>
            <Image x:Name="bgImg" 
                   Aspect="AspectFill"
                   Grid.RowSpan="2"
                   Source="bg.png"
                   Opacity="0.5"
                   HorizontalOptions="FillAndExpand" 
                   VerticalOptions="FillAndExpand"/>
            <Image Aspect="AspectFill" 
                   Grid.RowSpan="2"
                   Source="overlay.png"
                   HorizontalOptions="FillAndExpand" 
                   VerticalOptions="FillAndExpand"/>
            <ImageButton Source="menu.png" 
                         Margin="20"
                         WidthRequest="23"
                         HeightRequest="15"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"/>
            <Grid Grid.Row="1">
                <StackLayout Spacing="20">
                    <StackLayout Orientation="Horizontal"
                                 Spacing="50"
                                 HorizontalOptions="Center">
                        <StackLayout VerticalOptions="Center">
                            <Image x:Name="iconImg"
                                   Source="cloud.png"
                                   WidthRequest="67"
                                   HeightRequest="50"/>
                            <Label x:Name="descriptionTxt"
                                   Text="Cloudy"
                                   TextColor="White"
                                   FontSize="13"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                        <StackLayout VerticalOptions="Center">
                            <Label x:Name="cityTxt"
                                   Text="LONDON"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label x:Name="dateTxt"
                                   Text="SATURDAY, NOV 30"
                                   TextColor="White"
                                   FontSize="13"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout>
                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="Center"
                                     Spacing="0">
                            <Label x:Name="temperatureTxt"
                                   Text="26"
                                   TextColor="White"
                                   FontSize="150"
                                   HorizontalOptions="Center"/>
                            <Label Text="°"
                                   TextColor="White"
                                   FontSize="150"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                        <Label Text="CELSIUS"
                               Margin="0, -30, 0, 0"
                               TextColor="White"
                               FontSize="13"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </StackLayout>
            </Grid>
        </Grid>
        <Grid Grid.Row="1"
              HeightRequest="160" 
              ColumnSpacing="0">
            <ListView x:Name="listView"
                      HasUnevenRows="True" 
                      ItemsSource="{Binding .}"
                      BackgroundColor="#758ABA">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout HorizontalOptions="CenterAndExpand"
                                             VerticalOptions="CenterAndExpand">
                            <Label x:Name="dayOneTxt"
                                           Text="Sunday" 
                                           TextColor="White" 
                                           FontSize="13" 
                                           HorizontalOptions="Center"/>
                            <Label x:Name="dateOneTxt"
                                           Margin="0, -5, 0, 0"
                                           Text="01 Dec"
                                           TextColor="White"
                                           FontSize="10"
                                           HorizontalOptions="Center"/>
                            <Image x:Name="iconOneImg"
                                           Source="cloud.png"
                                           Margin="0,20"
                                           WidthRequest="30"
                                           HeightRequest="22"/>
                            <StackLayout Orientation="Horizontal"
                                                 HorizontalOptions="Center"
                                                 Spacing="0">
                                <Label x:Name="tempOneText"
                                               Text="22"
                                               TextColor="White"
                                               FontSize="23"
                                               HorizontalOptions="Center"/>
                                <Label Text="°"
                                               TextColor="White"
                                               FontSize="23"
                                               HorizontalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</ContentPage>